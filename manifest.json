{
  "manifest_version": 3,
  "name": "SpotlightX-Auth",
  "version": "1.0",
  "description": "__MSG_mainDescription__",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "images/icon_48.png",
      "128": "images/icon_128.png"
    }
  },
  "permissions": ["activeTab", "cookies"],
  "host_permissions": ["https://twitter.com/*"],
  "icons": {
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "default_locale": "en"
}
